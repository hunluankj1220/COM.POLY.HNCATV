<view class="page_heard">
      <view class="hear-box">
            <image class="hear-image" src="{{userInfoAvatar}}"></image>
              <view class="hear-box__ctn">
                  <view class="hear-box__title">{{nickName}}</view>
                  <view class="hear-box">
                  <view class="hear-box__desc">智能卡:{{card}}</view>
                  <view class="hear-box-right">
                    <image class="hear_right-imge" src="../../assets/images/ic_modification.png"></image>
                    <view class="hear-right__title">修改/解绑</view>
                  </view>
                  </view>
              </view>
          </view>
  </view>
  <view class="me-page"></view>
  <view class=" me-pd">
    <view class="weui-cells weui-cells_after-title" wx:for="{{routes}}" >
        <navigator url="{{item.route}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="{{item.icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd me-text">{{item.text}}</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
    </view>
</view>