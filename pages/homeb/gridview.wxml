<template name="gridview"> 
 <view class="page__bd">
        <view class="weui-grids" >
            <block wx:for="{{routes}}" wx:key="*this">
                <navigator url="{{item.route}}" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="{{item.icon}}" />
                    <view class="weui-grid__label">{{item.text}}</view>
                </navigator>
            </block>
        </view>
</view>  
</template>